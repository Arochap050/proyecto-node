<div class="container">
    <div class="row mt-5">
        {{#if usuarios}}
        
            <div class="col-md-3">
                <table class="table text-center">
                    <thead>
                        <tr class="table-dark">
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Edad</th>
                            <th>botonnes</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each usuarios}}
                            <tr>
                                <td>{{Nombre}}</td>
                                <td>{{Apellido}}</td>
                                <td>{{edad}}</td>
                                <td>
                                    <a class="btn btn-warning" href="">editar</a>
                                    <a class="btn btn-success" href="">eliminar</a>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                    <tfoot>
                        <tr class="table-dark">
                            <td colspan="4"> registro de usuarios</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        
        {{else}}
            <div class="card text-center mx-auto" style="width: 350px;">
                <div class="card-header">
                    <h3>Debes crear un usuario</h3>
                </div>
                <div class="card-body">
                    <p>Registrar nuevo usuario</p>
                    <a class="btn btn-primary" href="/add">Crear</a>
                </div>
            </div>
        {{/if}}
    </div>
</div>